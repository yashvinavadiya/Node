<%- include('partials/header') %>

<h2><%= student.name %></h2>

<ul class="detail-list">
  <li><strong>Age:</strong> <%= student.age %></li>
  <li><strong>Course:</strong> <%= student.course %></li>
  <li><strong>Email:</strong> <%= student.email %></li>
  <li><strong>Gender:</strong> <%= student.gender %></li>
  <li><strong>ID:</strong> <%= student.id %></li>
</ul>

<a href="/students/<%= student.id %>/edit" class="btn">Edit</a>
<form action="/students/<%= student.id %>/delete" method="post" style="display:inline">
  <button class="btn danger" onclick="return confirm('Delete this student?')">Delete</button>
</form>
<a href="/" class="btn alt">Back</a>

<%- include('partials/footer') %>
