<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Student Management</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <style>
    /* Reset & base */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: "Segoe UI", Arial, sans-serif;
      background: #f5f7fa;
      color: #333;
      line-height: 1.5;
    }

    a {
      text-decoration: none;
      color: inherit;
    }

    /* Container */
    .container {
      width: 90%;
      max-width: 1100px;
      margin: 0 auto;
    }

    /* Topbar / Header */
    .topbar {
      background: #007bff;
      color: #fff;
      padding: 12px 0;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      position: sticky;
      top: 0;
      z-index: 100;
    }

    .topbar .container {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .topbar h1 a {
      font-size: 22px;
      font-weight: 700;
      color: #fff;
    }

    .topbar nav {
      display: flex;
      gap: 20px;
    }

    .topbar nav a {
      font-size: 15px;
      font-weight: 500;
      color: #fff;
      padding: 8px 12px;
      border-radius: 6px;
      transition: background 0.3s;
    }

    .topbar nav a:hover {
      background: rgba(255,255,255,0.2);
    }

    /* Buttons */
    .btn {
      background: #fff;
      color: #007bff !important;
      padding: 8px 14px;
      border-radius: 6px;
      font-size: 14px;
      font-weight: 600;
      transition: all 0.3s;
      border: 1px solid transparent;
    }

    .btn:hover {
      background: #0056b3;
      color: #fff !important;
      border-color: #0056b3;
    }

    /* Main layout */
    main.container {
      padding: 25px 0;
    }

    /* Responsive */
    @media (max-width: 768px) {
      .topbar .container {
        flex-direction: column;
        gap: 10px;
      }

      .topbar nav {
        flex-wrap: wrap;
        justify-content: center;
      }
    }
  </style>
</head>
<body>
  <header class="topbar">
    <div class="container">
      <h1><a href="/">Student Management</a></h1>
      <nav>
        <a href="/">Home</a>
        <a href="/students/new" class="btn">Add Student</a>
      </nav>
    </div>
  </header>

  <main class="container">
    <!-- Page Content Here -->
  </main>
</body>
</html>
